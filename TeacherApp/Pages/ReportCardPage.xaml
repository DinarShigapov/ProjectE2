<Page x:Class="TeacherApp.Pages.ReportCardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeacherApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Журнал">

    <Grid Background="#FFEFF1F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="187*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="13 0 0 -10"
                    x:Name="SPGroup"
                    Panel.ZIndex="1">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Resources>
                        <Style TargetType="RadioButton" BasedOn="{StaticResource GroupSelectButton}"/>
                    </Style.Resources>
                </Style>
            </StackPanel.Style>


            <RadioButton Content="326" 
                         IsChecked="True"/>

        </StackPanel>
        <Border Background="White" 
                CornerRadius="20"
                Grid.Row="1"
                Padding="10"
                >

        </Border>
    </Grid>
</Page>
