<Page x:Class="EducationalPartApp.Pages.ScheduleListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EducationalPartApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="581.2" d:DesignWidth="880"
      Title="ScheduleListPage">

    <Border Background="White"
            CornerRadius="20"
            Padding="50">
        <Grid x:Name="grid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="37*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="93*"/>
            </Grid.ColumnDefinitions>

            <Border CornerRadius="20"
                    Padding="50"
                    Height="{Binding ActualHeight, ElementName=grid, Mode=OneWay}"
                    Grid.Column="2"
                    Background="#F0EFEF">
            </Border>

            <GridSplitter Grid.Column="1" Width="15"
                          Background="Transparent"/>

            <Grid>
                <Border CornerRadius="20"
                        Padding="20"
                        Height="200"
                        VerticalAlignment="Top"
                        Background="#F0EFEF">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="51*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="103*"/>
                        </Grid.RowDefinitions>

                        <StackPanel>
                            <TextBlock Text="Курс / Семестр"
                                       Style="{StaticResource DefualtText}"/>
                            <ComboBox/>
                        </StackPanel>

                        <Rectangle Grid.Row="1"
                                      Height="1">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="Black" Opacity="0.2"/>
                            </Rectangle.Fill>
                        </Rectangle>

                    </Grid>
                </Border>
                <Button Style="{StaticResource ButtonStyle}"
                        VerticalAlignment="Bottom"
                        Height="35" Width="150"
                        Content="Создать"/>
            </Grid>
        </Grid>
    </Border>
</Page>
