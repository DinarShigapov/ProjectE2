<Page x:Class="EducationalPartApp.Pages.GroupSelectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EducationalPartApp.Pages"
      mc:Ignorable="d" 
      x:Name="groupSelect"
      Title="GroupSelectPage">

    <StackPanel Height="140"
                Width="200"
                Margin="25 0 25 0"
                Orientation="Vertical">
        <StackPanel Margin="0 0 0 21">
            <TextBlock Text="Группа"
                       Style="{StaticResource HeaderText}"/>
            <TextBox/>
        </StackPanel>
        <Button Style="{StaticResource ButtonStyle}"
                Width="144"
                Height="31"
                Content="Создать" Click="BGroupSelection_Click"/>
    </StackPanel>
</Page>
