                    </Border>
                </DockPanel>
            </StackPanel>

            <Button Grid.Row="3" Content="Сохранить" 
                    Style="{StaticResource ButtonStyle}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Width="170"
                    Height="50"
                    Background="#6D61F5"
                    FontSize="17"/>
            <!--RМакет-->
        </Grid>
    </Border>
</Page>
