                    <Border Width="429"
                            CornerRadius="14" DockPanel.Dock="Left">
                        <Border.Background>
                            <SolidColorBrush Color="#FFD9D9D9" Opacity="0.5"/>
                        </Border.Background>
                        <TextBlock Text="МДК.06.01 Внедрение информационных систем" 
                                   Style="{StaticResource DefualtText}" 
                                   VerticalAlignment="Center"
                                   Margin="10 0"/>
                    </Border>
                </DockPanel>
                <DockPanel Margin="0 10 0 0">
                    <Border Width="64"
                            Height="50"
